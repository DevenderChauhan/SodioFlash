<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/color_click_ed_s"
                android:endColor="@color/color_click_ed_e"
                />
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient android:startColor="@color/color_click_none_s"
                android:endColor="@color/color_click_none_e"
                />
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient android:startColor="@color/color_click_nor_s"
                android:endColor="@color/color_click_nor_e"
                />
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="@color/color_click_nor_s"
                android:endColor="@color/color_click_nor_e"
                />
            <corners android:radius="3dp"/>
        </shape>
    </item>
</selector>