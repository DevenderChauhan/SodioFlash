<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/orderId"
            style="@style/black_13_w_w"
            android:drawableLeft="@drawable/order_number_icon"
            android:drawablePadding="15dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/orderQuestion"
            style="@style/tip_red_13_w_w"
            android:text="@string/using_question"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
    <View style="@style/line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/orderRules"
            style="@style/black_13_w_w"
            android:drawableLeft="@drawable/buy_box_icon"
            android:drawablePadding="15dp"
            android:layout_centerVertical="true"
            android:text="@string/buy_box"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/buy_box_btn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:text="@string/buy_box_btn"
            android:textColor="@color/color_theme"
            android:gravity="center"
            android:background="@drawable/general_stroke_theme_bg"/>
    </RelativeLayout>
    <View style="@style/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_min"
                style="@style/theme_25_w_w"
                android:text="0" />
            <TextView style="@style/black_12_w_w"
                android:text="@string/using_min"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/order_price"
                style="@style/theme_25_w_w"
                android:text="0"/>
            <TextView
                android:id="@+id/money_unit"
                style="@style/black_12_w_w"
                android:text="@string/using_price"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>