<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="141dp"
    >

    <ImageView
        android:id="@+id/map_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@drawable/map_refresh" />

    <ImageView
        android:id="@+id/map_location"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/map_location" />

    <ImageView
        android:id="@+id/map_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/map_list" />

    <ImageView
        android:id="@+id/map_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/map_location"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/map_help" />

    <LinearLayout
        android:id="@+id/map_scan_lock"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_list"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/index_bottom_scan_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bottom_stop_reach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/qr_code"
            android:drawablePadding="13dp"
            android:text="@string/index_scan_text"
            android:textColor="@color/color_white"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>