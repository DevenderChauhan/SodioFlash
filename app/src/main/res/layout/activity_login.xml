<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="@drawable/login_title_bg">
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:src="@drawable/back_white_bg"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/nomo_logo_icon"/>
    </RelativeLayout>
    <TextView
        style="@style/black_14_w_w"
        android:text="@string/login_phone"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/areaCode"
            style="@style/theme_16_w_w"
            android:gravity="center"
            android:layout_height="30dp"
            android:text="+65" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/phoneNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:inputType="phone"
            android:hint="@string/login_phone"
            android:textSize="16sp"
            android:textColorHint="@color/color_aux_gray"
            android:textColor="@color/color_black"
            />

    </LinearLayout>
    <View style="@style/line"
        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        style="@style/black_14_w_w"
        android:text="@string/login_paw"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@null"
            android:textSize="16sp"
            android:hint="@string/login_paw_desc"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/forgotPaw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_aux_gray"
            android:textSize="16sp"
            android:text="@string/forget_paw"/>
    </LinearLayout>
    <View style="@style/line"
        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/login_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="@drawable/general_text_selector"
        android:background="@drawable/genaral_btn_click_bg_with_gradient"
        android:text="@string/login_account" />
    <Button
        android:id="@+id/login_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="@drawable/general_text_gay_bg"
        android:background="@drawable/general_no_bg"
        android:text="@string/login_regist" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <View android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_line"/>
            <TextView
                style="@style/augay_12_w_w"
                android:text="@string/thethirdlogin"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <View android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_line"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/wechat_friends_bg"/>
                <TextView
                    style="@style/augay_13_w_w"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_deep_gray"
                    android:text="@string/login_wechat"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/facebook_friends_bg"/>
                <TextView
                    style="@style/augay_13_w_w"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:textColor="@color/color_deep_gray"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/login_facebook"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>